text/html;                      cp %s /tmp/mutt-html-$$.html && $BROWSER /tmp/mutt-html-$$.html &>/dev/null &; needsterminal; nametemplate=%s.html
text/html;                      elinks -dump -dump-charset %{charset}; copiousoutput;
text/plain;                     nvim %s; needsterminal;
text/plain;                     nvim %s; copiousoutput;
application/pdf;                xdg-open %s &>/dev/null &; nametemplate=%s.pdf
application/*;                  mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; xdg-open /tmp/mutt/$(basename %s) &>/dev/null &
image/*;                        mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; xdg-open /tmp/mutt/$(basename %s) &>/dev/null &
audio/*;                        mpv %s &>/dev/null &
video/*;                        mpv %s &>/dev/null &
